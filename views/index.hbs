<div class = "d-flex justify-content-between flex-wrap">
{{#each data}}
<div class="card border" style="width: 13rem; height: 12rem">
  <img class="card-img-top" src="{{this.image_url}}" alt="Card image cap" style="height: 12rem; width:12rem">
  <div class="card-body bg-success">
    <h5 class="card-title text-white">{{this.name}}</h5>
    <!-- <p class="card-text">{{this.description}}</p>  -->
    <p> <b class="text-white"> {{this.price}} &euro;</b></p> 
    <form action="/{{this._id}}/add" method="POST">
     <input type="text" name="quantity" id="quantity">
    <button type = "submit" class = "btn btn-primary cart-add" >Add</button>
    </form>
</div>
</div>
{{/each}}


