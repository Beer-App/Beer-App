<table class="table table-dark">
  <thead>
    <tr>
    
      <th scope="col">Product</th>
      <th scope="col">Quantity</th>
      <th scope="col">Price</th>
    </tr>
  </thead>
  <tbody>
      {{#each data}}
    <tr>
      <td>{{this.name}}</td>
      <td>{{this.quantity}}</td>
      <td>{{this.price}}</td>
      <td>
        <form action="/discard/{{this._id}}" method="POST" style=" display:inline!important;">
           <button type="submit" class="btn btn-primary">Discard</button>
        </form> 
      </td>
    </tr>
    {{/each}}
    <tfoot>
    <tr>
      <td>Sum</td>
      <td></td>
      <td>&euro;{{aggSum}}</td>
    </tr>
  </tfoot>
  </tbody>
</table>




<form action="/payment"class = "form-group" method="post">
    <label for="cardNumber">Card Number</label>
    <input type="text" class = "form-group" name="cardNumber">
    <button type="submit" class="btn btn-success btn-lg">Pay</button>
</form>